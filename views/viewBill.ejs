<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Invoice - EMV BAZAR</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: #f4f6f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .invoice-card {
            background: #fff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.08);
            max-width: 800px;
            margin: 40px auto;
        }

        .logo-container {
            text-align: center;
            margin-bottom: 20px;
        }

        .logo-container h1 {
            color: #198754;
            font-weight: 800;
            margin: 0;
            letter-spacing: 2px;
        }

        .invoice-title {
            text-align: center;
            font-weight: bold;
            letter-spacing: 2px;
            margin-bottom: 30px;
            color: #333;
        }

        .info-box {
            margin-bottom: 25px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th {
            background: #198754;
            color: white;
            padding: 12px;
            text-transform: uppercase;
            font-size: 0.85rem;
        }

        td {
            padding: 10px;
            border-bottom: 1px solid #eee;
        }

        .grand-total {
            text-align: right;
            margin-top: 30px;
            border-top: 2px solid #198754;
            padding-top: 15px;
        }

        .grand-total span {
            font-size: 1.8rem;
            font-weight: bold;
            color: #198754;
        }

        @media print {
            body {
                background: white;
            }

            .invoice-card {
                box-shadow: none;
                margin: 0;
                width: 100%;
                max-width: 100%;
            }

            .no-print {
                display: none !important;
            }
        }
    </style>
</head>

<body>
    <%- include('partials/navbar', { currentPage: 'bills' }) %>

        <div class="text-center mt-4 no-print">
            <button class="btn btn-outline-success me-2" onclick="window.print()">Print Invoice</button>
            <a href="/bills" class="btn btn-outline-secondary">Back to Billing</a>
        </div>

        <div class="invoice-card">
            <!-- LOGO -->
            <div class="logo-container">
                <img src="/image/logo.png" alt="EMV BAZAR Logo" style="max-height: 100px; width: auto;">
            </div>

            <h4 class="invoice-title">INVOICE</h4>

            <!-- Customer & Date -->
            <div class="row info-box">
                <div class="col-6">
                    <strong>Bill To:</strong><br>
                    <span style="font-size: 1.1rem;">
                        <%= bill.username %>
                    </span><br>
                    <%= bill.phone %>
                </div>
                <div class="col-6 text-end">
                    <strong>Date:</strong><br>
                    <%= new Date(bill.createdAt).toLocaleDateString(undefined, { year: 'numeric' , month: 'long' ,
                        day: 'numeric' }) %>
                </div>
            </div>

            <!-- Items Table -->
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Item Description</th>
                            <th class="text-center">Qty</th>
                            <th class="text-center">Price (₹)</th>
                            <th class="text-end">Total (₹)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% bill.items.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= item.item %>
                                </td>
                                <td class="text-center text-muted">
                                    <%= item.quantity %>
                                </td>
                                <td class="text-center">₹<%= item.unitPrice.toFixed(2) %>
                                </td>
                                <td class="text-end fw-bold">₹<%= item.amount.toFixed(2) %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>

            <!-- Grand Total -->
            <div class="grand-total">
                <p class="text-muted fw-bold mb-1">TOTAL AMOUNT</p>
                <span>₹ <%= bill.totalAmount.toFixed(2) %></span>
            </div>
        </div>

</body>

</html>